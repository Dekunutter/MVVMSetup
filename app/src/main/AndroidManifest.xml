<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.setup.deku.mvvm">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.setup.deku.mvvm.ui.views.SplashView"
            android:label="@string/increment_title"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.setup.deku.mvvm.ui.views.InitializerView"/>
        <activity android:name="com.setup.deku.mvvm.ui.views.OptionsView"/>
        <activity android:name="com.setup.deku.mvvm.ui.views.CounterView"/>
    </application>
</manifest>
